<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/gradient_background"
    android:elevation="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/repo_header"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_marginBottom="8dp"
        android:text="Repo#1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/repo_forks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Forks: 1"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@android:color/black"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repo_header"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/repo_stars"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stars: 1"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@android:color/black"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toRightOf="@+id/repo_forks"
        app:layout_constraintTop_toBottomOf="@+id/repo_header"
        app:layout_constraintTop_toTopOf="@+id/repo_forks"
        android:layout_marginTop="-11dp"
        app:layout_constraintBottom_toBottomOf="@+id/repo_forks"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.529" />

</android.support.constraint.ConstraintLayout>
